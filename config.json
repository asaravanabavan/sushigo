{
  "architecture": {
    "components": {
      "MyAgent.java": "Main agent (BasicMCTS + determinization + blended heuristics)",
      "Determinizer.java": "Samples hidden hands for IS-MCTS",
      "Heuristics.java": "Feature-based heuristic",
      "SushiGoHeuristic.java": "Counter-based heuristic"
    }
  },
  "search": {
    "numDeterminizations": 5,
    "uct": "sqrt(2)",
    "rolloutLength": 12,
    "maxTreeDepth": 10
  },
  "heuristics": {
    "blendAlpha": 0.5,
    "variants": ["SIMPLE", "BALANCED", "AGGRESSIVE", "STRATEGIC"],
    "weightsNote": "Weights set inside each heuristic class; alpha set in MyAgent"
  },
  "run": {
    "mainClassPreferred": "evaluation.RunGames",
    "focusPlayer": "players.groupAJ.MyAgent",
    "exampleCLI": "gradlew run -PmainClass=evaluation.RunGames --args=\"--game SushiGo --nPlayers 3 --mode roundrobin --focusPlayer players.groupAJ.MyAgent --destDir results --addTimeStamp true\""
  }
}

